{
  "name": "normalize-path",
  "description": "Normalize file path slashes to be unix-like forward slashes. Also condenses repeat slashes to a single slash and removes and trailing slashes unless disabled.",
  "version": "2.1.1",
  "homepage": "https://github.com/jonschlinkert/normalize-path",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "jonschlinkert/normalize-path",
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "remove-trailing-separator": "^1.0.1"
  },
  "devDependencies": {
    "benchmarked": "^0.1.1",
    "gulp-format-md": "^0.1.11",
    "minimist": "^1.2.0",
    "mocha": "*"
  },
  "verb": {
    "related": {
      "list": [
        "contains-path",
        "ends-with",
        "is-absolute",
        "is-relative",
        "parse-filepath",
        "path-ends-with",
        "path-segments",
        "rewrite-ext",
        "unixify"
      ],
      "description": "Other useful libraries for working with paths in node.js:"
    },
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    }
  }
}